            <HBox spacing="30.0" style="-fx-alignment: TOP_LEFT;">
               <padding>
                  <Insets bottom="40.0" left="30.0" right="30.0" top="30.0" />
               </padding>
               <children>
                  <!-- Panel Principal - Consulta Médica -->
                  <VBox spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                     </padding>
                     <children>
                        <!-- Título de la sección -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <Label text="👨‍⚕️" style="-fx-font-size: 28px;"/>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Consulta Médica" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2E5984;"/>
                                    <Label text="Diagnóstico, tratamiento y disposición final" style="-fx-font-size: 14px; -fx-text-fill: #7A7A7A;"/>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>

                        <!-- Sección 1: Datos del Paciente -->
                        <VBox spacing="15.0" style="-fx-background-color: #F8F9FA; -fx-background-radius: 12; -fx-padding: 25;">
                           <children>
                              <Label text="👤 Datos del Paciente" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                              
                              <HBox spacing="20.0">
                                 <children>
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label text="Nombre Completo" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <Label fx:id="lblNombrePaciente" text="-" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label text="CURP" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <Label fx:id="lblCurpPaciente" text="-" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label text="Edad" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <Label fx:id="lblEdadPaciente" text="-" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label text="Sexo" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <Label fx:id="lblSexoPaciente" text="-" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <HBox spacing="20.0">
                                 <children>
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label text="Contacto de Emergencia" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <Label fx:id="lblContactoEmergencia" text="-" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label text="Seguro Médico" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <Label fx:id="lblSeguroMedico" text="-" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>

                        <!-- Sección 2: Evaluación Triage -->
                        <VBox spacing="15.0" style="-fx-background-color: #F8F9FA; -fx-background-radius: 12; -fx-padding: 25;">
                           <children>
                              <Label text="🚨 Evaluación de Triage" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                              
                              <HBox spacing="20.0">
                                 <children>
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label text="Nivel de Prioridad" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <Label fx:id="lblNivelTriage" text="-" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label text="Especialidad Asignada" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <Label fx:id="lblEspecialidad" text="-" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Motivo de Consulta" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtMotivoConsulta" editable="false" prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Síntomas" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtSintomas" editable="false" prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>

                        <!-- Sección 3: Evaluación Social -->
                        <VBox spacing="15.0" style="-fx-background-color: #F8F9FA; -fx-background-radius: 12; -fx-padding: 25;">
                           <children>
                              <Label text="🏠 Evaluación Social" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Antecedentes Familiares" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtAntecedentesFamiliares" editable="false" prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Observaciones Sociales" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtObservacionesSociales" editable="false" prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>

                        <!-- Sección 4: Examen Físico y Diagnóstico -->
                        <VBox spacing="15.0" style="-fx-background-color: #E8F4FD; -fx-background-radius: 12; -fx-padding: 25;">
                           <children>
                              <Label text="🩺 Examen Físico y Diagnóstico" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                              
                              <!-- Signos Vitales -->
                              <HBox spacing="15.0">
                                 <children>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Presión Arterial" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <TextField fx:id="txtPresionArterial" promptText="120/80 mmHg" style="-fx-pref-height: 35px;" prefWidth="120"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Frecuencia Cardíaca" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <TextField fx:id="txtFrecuenciaCardiaca" promptText="72 bpm" style="-fx-pref-height: 35px;" prefWidth="100"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Temperatura" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <TextField fx:id="txtTemperatura" promptText="36.5°C" style="-fx-pref-height: 35px;" prefWidth="100"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Peso" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <TextField fx:id="txtPeso" promptText="70 kg" style="-fx-pref-height: 35px;" prefWidth="80"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Talla" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <TextField fx:id="txtTalla" promptText="170 cm" style="-fx-pref-height: 35px;" prefWidth="80"/>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Exploración Física" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtExploracionFisica" promptText="Describa la exploración física detallada del paciente..." prefRowCount="3" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Estudios Realizados" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtEstudiosRealizados" promptText="Rx, laboratorios, ultrasonidos, etc." prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Resultados de Estudios" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtResultadosEstudios" promptText="Resultados de laboratorios y estudios de imagen..." prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Diagnóstico Principal" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtDiagnosticoPrincipal" promptText="Diagnóstico principal basado en la evaluación..." prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Diagnósticos Secundarios" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtDiagnosticosSecundarios" promptText="Diagnósticos diferenciales o secundarios..." prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                              
                              <HBox spacing="15.0">
                                 <children>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Código CIE-10" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <TextField fx:id="txtCodigoCie10" promptText="J12.9" style="-fx-pref-height: 35px;" prefWidth="120"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Descripción CIE-10" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <TextField fx:id="txtDescripcionCie10" promptText="Neumonía viral, no especificada" style="-fx-pref-height: 35px;"/>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>

                        <!-- Sección 5: Tratamiento y Medicamentos -->
                        <VBox spacing="15.0" style="-fx-background-color: #E8F5E8; -fx-background-radius: 12; -fx-padding: 25;">
                           <children>
                              <Label text="💊 Tratamiento y Medicamentos" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Tratamientos Inmediatos Aplicados" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtTratamientosInmediatos" promptText="Oxigenoterapia, medicamentos IV, suero, procedimientos..." prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Medicamentos Prescritos" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtMedicamentosPrescritos" promptText="Nombre del medicamento, dosis, frecuencia, duración..." prefRowCount="3" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>

                        <!-- Sección 6: Indicaciones y Seguimiento -->
                        <VBox spacing="15.0" style="-fx-background-color: #FFF8E1; -fx-background-radius: 12; -fx-padding: 25;">
                           <children>
                              <Label text="📋 Indicaciones y Seguimiento" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Indicaciones para el Paciente" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtIndicacionesPaciente" promptText="Reposo, hidratación, vigilar signos de alarma..." prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Seguimiento Médico" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtSeguimientoMedico" promptText="Citas de control, referencias a especialidades..." prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                              
                              <HBox spacing="15.0">
                                 <children>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Incapacidad Laboral" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <ComboBox fx:id="cmbIncapacidadLaboral" promptText="Seleccionar" style="-fx-pref-height: 35px;" prefWidth="150"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Días" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <TextField fx:id="txtDiasIncapacidad" promptText="0" style="-fx-pref-height: 35px;" prefWidth="80"/>
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                       <children>
                                          <Label text="Restricciones Específicas" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                          <ComboBox fx:id="cmbRestriccionesEspecificas" promptText="Ninguna" style="-fx-pref-height: 35px;" prefWidth="200"/>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>

                        <!-- Sección 7: Notas del Médico -->
                        <VBox spacing="15.0" style="-fx-background-color: #F3E5F5; -fx-background-radius: 12; -fx-padding: 25;">
                           <children>
                              <Label text="📝 Notas del Médico" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Observaciones Adicionales" style="-fx-font-weight: bold; -fx-text-fill: #333333;"/>
                                    <TextArea fx:id="txtObservacionesAdicionales" promptText="Notas importantes, evolución durante consulta, consideraciones especiales..." prefRowCount="3" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;" wrapText="true"/>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>

                        <!-- Botones de acción -->
                        <HBox spacing="20.0" alignment="CENTER">
                           <children>
                              <Button fx:id="btnGuardar" text="💾 Guardar Consulta" style="-fx-background-color: linear-gradient(to right, #2E5984, #4A90E2); -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 50; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(46, 89, 132, 0.3), 8, 0, 0, 2);" onAction="#handleGuardarConsulta"/>
                              <Button fx:id="btnCompletarConsulta" text="✅ Completar Consulta" style="-fx-background-color: linear-gradient(to right, #4CAF50, #66BB6A); -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 50; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(76, 175, 80, 0.3), 8, 0, 0, 2);" onAction="#handleCompletarConsulta"/>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Panel Lateral Derecho -->
                  <VBox prefWidth="320.0" spacing="20.0">
                     <children>
                        <!-- Panel de Tiempo de Atención -->
                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                           <children>
                              <Label text="⏱️ Tiempo de Atención" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                              <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #E3F2FD; -fx-background-radius: 8; -fx-padding: 15;">
