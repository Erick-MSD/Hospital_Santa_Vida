                                       <children>
                                          <Label text="Riesgo Cardiovascular" style="-fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-size: 12px;"/>
                                          <Label fx:id="lblRiesgoCardiovascular" text="ALTO" style="-fx-font-size: 11px; -fx-text-fill: #D32F2F; -fx-font-weight: bold;"/>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
