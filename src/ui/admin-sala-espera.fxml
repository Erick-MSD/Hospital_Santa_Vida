<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminSalaEsperaController">
   <top>
      <!-- Header mejorado con gradiente y mejor visibilidad -->
      <VBox style="-fx-background: linear-gradient(from 0% 0% to 100% 100%, #1976D2 0%, #2E5984 50%, #0D47A1 100%); -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);">
         <HBox alignment="CENTER_LEFT" spacing="25.0">
            <!-- Logo con fondo blanco circular -->
            <VBox alignment="CENTER">
               <StackPane style="-fx-background-color: white; -fx-background-radius: 50; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 8, 0, 0, 3);">
                  <ImageView fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/img/Hospital_santa_vida.png" />
                     </image>
                  </ImageView>
               </StackPane>
            </VBox>
            
            <!-- Información principal con mejor tipografía -->
            <VBox spacing="5.0">
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 2, 0, 1, 1);" text="HOSPITAL SANTA VIDA" />
                  <Label style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 15; -fx-font-size: 12px; -fx-font-weight: bold;" text="🟢 EN LÍNEA" />
               </HBox>
               <Label style="-fx-text-fill: #E3F2FD; -fx-font-size: 18px; -fx-font-weight: bold;" text="📺 SALA DE ESPERA DIGITAL - ESTADO DE PACIENTES EN TIEMPO REAL" />
               <HBox spacing="15.0">
                  <Label style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-padding: 5 10; -fx-background-radius: 10; -fx-font-size: 12px;" text="🕐 Actualización automática cada 30 segundos" />
                  <Label fx:id="lblFechaHeader" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-padding: 5 10; -fx-background-radius: 10; -fx-font-size: 12px;" text="📅 Sábado, 28 de Septiembre 2025" />
               </HBox>
            </VBox>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Panel de acceso rápido mejorado -->
            <VBox spacing="10.0" alignment="CENTER_RIGHT">
               <HBox spacing="10.0">
                  <!-- Menú de navegación con mejor estilo -->
                  <MenuBar style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10;">
                     <Menu style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="🏥 ACCESO RÁPIDO">
                        <MenuItem fx:id="menuTriage" onAction="#abrirTriage" text="🩺 Evaluación Triage" />
                        <MenuItem fx:id="menuRegistro" onAction="#abrirRegistroPaciente" text="📋 Registro de Pacientes" />
                        <MenuItem fx:id="menuTrabajoSocial" onAction="#abrirTrabajoSocial" text="🤝 Trabajo Social" />
                        <MenuItem fx:id="menuConsultaMedica" onAction="#abrirConsultaMedica" text="👨‍⚕️ Consulta Médica" />
                        <SeparatorMenuItem />
                        <MenuItem fx:id="menuReportes" onAction="#abrirReportes" text="📊 Reportes" />
                        <MenuItem fx:id="menuConfiguracion" onAction="#abrirConfiguracion" text="⚙️ Configuración" />
                     </Menu>
                  </MenuBar>
                  <Button fx:id="btnCerrarSesion" onAction="#handleLogout" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 20; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" text="🚪 CERRAR SESIÓN" />
               </HBox>
               <!-- Reloj grande para header -->
               <Label fx:id="lblRelojHeader" style="-fx-text-fill: #E3F2FD; -fx-font-size: 24px; -fx-font-weight: bold; -fx-font-family: 'Courier New';" text="00:00:00" />
            </VBox>
         </HBox>
      </VBox>
   </top>
   <center>
      <VBox spacing="20.0" style="-fx-padding: 30;">
         <!-- Título principal -->
         <HBox alignment="CENTER_LEFT" spacing="15.0">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2E5984;" text="📺 Sala de Espera - Estado de Pacientes" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnActualizar" onAction="#actualizarDatos" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="🔄 Actualizar" />
         </HBox>

         <!-- Estadísticas mejoradas con animaciones visuales -->
         <HBox spacing="25.0" style="-fx-padding: 0 0 20 0;">
            <VBox alignment="CENTER" style="-fx-background: linear-gradient(from 0% 0% to 100% 100%, #E3F2FD 0%, #BBDEFB 100%); -fx-padding: 25; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 4);" HBox.hgrow="ALWAYS">
               <Label fx:id="lblTotalPacientes" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #1976D2;" text="0" />
               <Label style="-fx-font-size: 16px; -fx-text-fill: #424242; -fx-font-weight: bold;" text="👥 TOTAL PACIENTES" />
               <Label style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="en el sistema hoy" />
            </VBox>
            <VBox alignment="CENTER" style="-fx-background: linear-gradient(from 0% 0% to 100% 100%, #FFF8E1 0%, #FFECB3 100%); -fx-padding: 25; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 4);" HBox.hgrow="ALWAYS">
               <Label fx:id="lblEsperandoTriage" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #F57C00;" text="0" />
               <Label style="-fx-font-size: 16px; -fx-text-fill: #424242; -fx-font-weight: bold;" text="⏳ ESPERANDO TRIAGE" />
               <Label style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="pendientes de evaluación" />
            </VBox>
            <VBox alignment="CENTER" style="-fx-background: linear-gradient(from 0% 0% to 100% 100%, #F3E5F5 0%, #E1BEE7 100%); -fx-padding: 25; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 4);" HBox.hgrow="ALWAYS">
               <Label fx:id="lblEsperandoMedico" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #7B1FA2;" text="0" />
               <Label style="-fx-font-size: 16px; -fx-text-fill: #424242; -fx-font-weight: bold;" text="🩺 ESPERANDO MÉDICO" />
               <Label style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="listos para consulta" />
            </VBox>
            <VBox alignment="CENTER" style="-fx-background: linear-gradient(from 0% 0% to 100% 100%, #E8F5E8 0%, #C8E6C9 100%); -fx-padding: 25; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 4);" HBox.hgrow="ALWAYS">
               <Label fx:id="lblCompletados" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #388E3C;" text="0" />
               <Label style="-fx-font-size: 16px; -fx-text-fill: #424242; -fx-font-weight: bold;" text="✅ COMPLETADOS HOY" />
               <Label style="-fx-font-size: 12px; -fx-text-fill: #666666;" text="atenciones finalizadas" />
            </VBox>
         </HBox>

         <!-- Tabla principal mejorada -->
         <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 0 0 15 0;">
               <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1976D2;" text="📋 ESTADO ACTUAL DE PACIENTES EN EL SISTEMA" />
               <Region HBox.hgrow="ALWAYS" />
               <Label fx:id="lblActualizandose" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 15; -fx-font-size: 12px; -fx-font-weight: bold;" text="� ACTUALIZANDO..." visible="false" />
               <Button fx:id="btnActualizar" onAction="#actualizarDatos" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 20; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="🔄 ACTUALIZAR AHORA" />
            </HBox>
            
            <TableView fx:id="tablaPacientes" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: #E0E0E0; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">
               <columns>
                  <TableColumn fx:id="colFolio" prefWidth="90.0" text="📄 FOLIO" />
                  <TableColumn fx:id="colNombre" prefWidth="220.0" text="👤 PACIENTE" />
                  <TableColumn fx:id="colEdad" prefWidth="70.0" text="🎂 EDAD" />
                  <TableColumn fx:id="colLlegada" prefWidth="130.0" text="🕐 LLEGADA" />
                  <TableColumn fx:id="colNivelTriage" prefWidth="120.0" text="🚨 NIVEL" />
                  <TableColumn fx:id="colEstado" prefWidth="180.0" text="📍 ESTADO ACTUAL" />
                  <TableColumn fx:id="colTiempoEspera" prefWidth="130.0" text="⏱️ TIEMPO" />
                  <TableColumn fx:id="colEspecialidad" prefWidth="160.0" text="🏥 ESPECIALIDAD" />
                  <TableColumn fx:id="colObservaciones" prefWidth="250.0" text="📝 OBSERVACIONES" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </VBox>

         <!-- Panel de información mejorado -->
         <HBox spacing="25.0" style="-fx-padding: 20 0 0 0;">
            <!-- Información del sistema con mejor diseño -->
            <VBox spacing="15.0" style="-fx-background: linear-gradient(from 0% 0% to 100% 100%, #FAFAFA 0%, #F5F5F5 100%); -fx-padding: 25; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 4);" HBox.hgrow="ALWAYS">
               <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1976D2;" text="📊 INFORMACIÓN DEL SISTEMA" />
               <HBox spacing="10.0">
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="🕐 Última actualización:" />
                  <Label fx:id="lblUltimaActualizacion" style="-fx-text-fill: #4CAF50; -fx-font-weight: bold; -fx-font-size: 14px;" text="--:--:--" />
               </HBox>
               <HBox spacing="10.0">
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="👤 Usuario actual:" />
                  <Label fx:id="lblUsuarioActual" style="-fx-text-fill: #2196F3; -fx-font-weight: bold; -fx-font-size: 14px;" text="Administrador" />
               </HBox>
               <HBox spacing="10.0">
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="🔗 Conexión BD:" />
                  <Label fx:id="lblEstadoConexion" style="-fx-text-fill: #4CAF50; -fx-font-weight: bold; -fx-font-size: 14px;" text="✅ Conectado" />
               </HBox>
            </VBox>

            <!-- Leyenda de colores mejorada -->
            <VBox spacing="15.0" style="-fx-background: linear-gradient(from 0% 0% to 100% 100%, #FAFAFA 0%, #F5F5F5 100%); -fx-padding: 25; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 4);">
               <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1976D2;" text="🎨 CÓDIGOS DE PRIORIDAD" />
               <VBox spacing="8.0">
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 20; -fx-font-weight: bold; -fx-min-width: 80;" text="🔴 ROJO" />
                     <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="CRÍTICO - Atención inmediata" />
                  </HBox>
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 20; -fx-font-weight: bold; -fx-min-width: 80;" text="🟠 NARANJA" />
                     <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="MUY URGENTE - 10 minutos" />
                  </HBox>
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 20; -fx-font-weight: bold; -fx-min-width: 80;" text="🟡 AMARILLO" />
                     <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="URGENTE - 60 minutos" />
                  </HBox>
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 20; -fx-font-weight: bold; -fx-min-width: 80;" text="🟢 VERDE" />
                     <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="MENOS URGENTE - 120 min" />
                  </HBox>
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <Label style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 20; -fx-font-weight: bold; -fx-min-width: 80;" text="🔵 AZUL" />
                     <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="NO URGENTE - Cita médica" />
                  </HBox>
               </VBox>
            </VBox>
         </HBox>
      </VBox>
   </center>
   <bottom>
      <!-- Footer mejorado con gradiente -->
      <HBox alignment="CENTER" style="-fx-background: linear-gradient(from 0% 0% to 100% 0%, #F5F5F5 0%, #E0E0E0 100%); -fx-padding: 20; -fx-border-color: #BDBDBD; -fx-border-width: 2 0 0 0;">
         <VBox alignment="CENTER_LEFT" spacing="5.0">
            <HBox spacing="15.0" alignment="CENTER_LEFT">
               <Label style="-fx-text-fill: #424242; -fx-font-size: 14px; -fx-font-weight: bold;" text="🏥 Hospital Santa Vida © 2025" />
               <Label style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 3 10; -fx-background-radius: 10; -fx-font-size: 11px; -fx-font-weight: bold;" text="Sistema de Gestión Hospitalaria v1.0" />
               <Label style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 3 10; -fx-background-radius: 10; -fx-font-size: 11px; -fx-font-weight: bold;" text="Sala de Espera Digital" />
            </HBox>
            <Label style="-fx-text-fill: #666666; -fx-font-size: 12px;" text="📺 Pantalla informativa para familiares - Actualización automática en tiempo real" />
         </VBox>
         <Region HBox.hgrow="ALWAYS" />
         <VBox alignment="CENTER_RIGHT" spacing="5.0">
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
               <Label style="-fx-text-fill: #424242; -fx-font-size: 14px; -fx-font-weight: bold;" text="🕐 HORA ACTUAL:" />
               <Label fx:id="lblHoraActual" style="-fx-text-fill: #1976D2; -fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Courier New'; -fx-background-color: #E3F2FD; -fx-padding: 5 15; -fx-background-radius: 10;" text="00:00:00" />
            </HBox>
            <Label style="-fx-text-fill: #666666; -fx-font-size: 11px;" text="Próxima actualización automática en 30 segundos" />
         </VBox>
      </HBox>
   </bottom>
</BorderPane>